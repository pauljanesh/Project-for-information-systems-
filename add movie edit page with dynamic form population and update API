<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Movie - Movie Watchlist</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>‚úèÔ∏è Edit Movie</h1>
        <p class="subtitle">Update the movie information</p>
        
        <div id="loading" class="loading-state" style="display: none;">
            <p>Loading movie details...</p>
        </div>
        
        <form id="form" class="form"></form>
    </div>
    
    <div id="toast" class="toast"></div>
    
    <script>
        const API = 'http://localhost:3000/api/movies';
        const id = new URLSearchParams(window.location.search).get('id');
        
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = `toast toast-${type}`;
            toast.style.display = 'block';
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }
        
        async function loadMovie() {
            const loading = document.getElementById('loading');
            
            try {
                loading.style.display = 'block';
                const res = await fetch(`${API}/${id}`);
                if (!res.ok) throw new Error('Movie not found');
                
                const movie = await res.json();
                populateForm(movie);
            } catch (error) {
                showToast('‚ùå Movie not found', 'error');
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 2000);
            } finally {
                loading.style.display = 'none';
            }
        }
        
        function populateForm(movie) {
            document.getElementById('form').innerHTML = `
                <div class="form-group">
                    <label for="name">Movie Name *</label>
                    <input type="text" id="name" value="${movie.name}" required>
                </div>
                
                <div class="form-group">
                    <label for="genre">Genre *</label>
                    <input type="text" id="genre" value="${movie.genre}" required>
                </div>
                
                <div class="form-group">
                    <label for="year">Release Year *</label>
                    <input type="number" id="year" value="${movie.year}" min="1900" max="2030" required>
                </div>
                
                <div class="form-group">
                    <label for="rating">Your Rating (0-10)</label>
                    <input type="number" id="rating" value="${movie.rating || ''}" min="0" max="10" step="0.1">
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" rows="4">${movie.description || ''}</textarea>
                </div>
                
                <div class="form-group">
                    <label for="posterUrl">Poster Image URL</label>
                    <input type="url" id="posterUrl" value="${movie.posterUrl || ''}">
                </div>
                
                <div class="buttons">
                    <button type="submit" id="submitBtn">üíæ Save Changes</button>
                    <a href="details.html?id=${id}" class="btn btn-secondary">‚Üê Cancel</a>
                </div>
            `;
            
            document.getElementById('form').addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const submitBtn = document.getElementById('submitBtn');
                const originalText = submitBtn.textContent;
                submitBtn.disabled = true;
                submitBtn.textContent = 'Saving...';
                
                const data = {
                    name: document.getElementById('name').value.trim(),
                    genre: document.getElementById('genre').value.trim(),
                    year: parseInt(document.getElementById('year').value),
                    rating: document.getElementById('rating').value || null,
                    description: document.getElementById('description').value.trim(),
                    posterUrl: document.getElementById('posterUrl').value.trim()
                };
                
                try {
                    const res = await fetch(`${API}/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    
                    if (res.ok) {
                        showToast('‚úÖ Movie updated successfully!', 'success');
                        setTimeout(() => {
                            window.location.href = `details.html?id=${id}`;
                        }, 1500);
                    } else {
                        const error = await res.json();
                        showToast(`‚ùå ${error.error || 'Could not update movie. Please try again.'}`, 'error');
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }
                } catch (error) {
                    showToast('‚ùå Connection error. Please try again.', 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                }
            });
        }
        
        loadMovie();
    </script>
</body>
</html>
